  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("open");
    }

    function toggleDropdown() {
      const menu = document.getElementById("dropdownMenu");
      menu.classList.toggle("show");
    }

    window.addEventListener('click', function(e) {
      const sidebar = document.getElementById("sidebar");
      const button = document.querySelector('.menu-icon');
      const dots = document.querySelector('.menu-dots');
      const menu = document.getElementById("dropdownMenu");

      if (!button.contains(e.target) && !sidebar.contains(e.target) && window.innerWidth < 768) {
        sidebar.classList.remove("open");
      }

      if (!dots.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.remove("show");
      }
    });

    function navigateTo(folderName) {
      const main = document.querySelector("main");
      main.innerHTML = `<h2>${folderName}</h2><p>This folder is currently empty.</p>`;
      document.getElementById('pageTitle').textContent = folderName;

      const sidebar = document.getElementById("sidebar");
      if (window.innerWidth < 768) {
        sidebar.classList.remove("open");
      }
    }

    function addFolder() {
      const icon = prompt("Choose an icon for your folder (e.g. üìÅ, üßæ, üìì):");
      if (!icon) return;

      const folderName = prompt("Enter a name for the new folder:");
      if (!folderName) return;

      const newItem = document.createElement("li");
      const newLink = document.createElement("a");
      newLink.href = "#";
      newLink.textContent = `${icon} ${folderName}`;
      newLink.onclick = function () {
        navigateTo(folderName);
        return false;
      };
      newItem.appendChild(newLink);

      const sidebarLists = document.querySelectorAll(".sidebar ul");
      const mainList = sidebarLists[0];
      const unsortedItem = mainList.querySelector("a[href='#'][onclick*='Unsorted']")?.parentNode;

      if (unsortedItem) {
        mainList.insertBefore(newItem, unsortedItem.nextSibling);
      } else {
        mainList.appendChild(newItem);
      }
    }
  
    function addNote() {
  const main = document.querySelector("main");
  main.innerHTML = `
    <h2>New Note</h2>
    <textarea style="width: 100%; height: 60vh; padding: 1rem; font-size: 1rem; border: 1px solid #ccc; border-radius: 6px; resize: vertical;">Start typing your note here...</textarea>
    <div style="margin-top: 1rem;">
      <button onclick="saveNote()" style="padding: 0.5rem 1.25rem; font-size: 1rem; background-color: #007aff; color: white; border: none; border-radius: 6px; cursor: pointer;">Save</button>
    </div>
  `;
  document.getElementById('pageTitle').textContent = "New Note";
}

function saveNote() {
  const textarea = document.querySelector("textarea");
  const noteText = textarea.value;
  alert("Note saved: " + noteText);
}
  </script>
